/* Project
---------------------------------------------------------------------------------- */

.layout {
    width: $mw;
    }

/* Top
-------------------------------------------------- */

.layout-top-l,
.layout-top-r {
    width: $grid;
    line-height: $line * $lh;
    }

.layout-top-l {
    border-right: 1px solid $bg-border;
    }

.layout-top-c {
    width: $mw - $grid * 2;
    background-color: $bg-main;
    border-top: 1px solid $bg-border;
    }

.layout-top-r {
    border-left: 1px solid $bg-border;
    }

/* /Top */


/* Image
-------------------------------------------------- */

.layout-img img {
    width: 100%;
    max-width: $mw + $grid * 2;
    height: auto;
    }

/* /Image */


/* Content
-------------------------------------------------- */

/* Main */

.layout-main-l {
    width: $grid;
    border-right: 1px solid $bg-border;
    }

.layout-main-c {
    width: $mw - $grid * 2;
    background-color: $bg-main;
    border-bottom: 1px solid $bg-border;
    }

.layout-main-r {
    width: $grid;
    border-left: 1px solid $bg-border;
    }

/* /Main */

/* Body */

.layout-body-l,
.layout-body-r {
    width: $grid * 2;
    }

.layout-body-c {
    padding-top: $grid;
    padding-bottom: $grid;

    p {
        text-align: center;
        }
    }

/* /Body */

/* /Content */


/* Footer
-------------------------------------------------- */

/* Decor */

.layout-hr td {
    line-height: $line;
    font-size: $line;
    }

/* /Decor */

/* Text */

.layout-foot-c {
    padding: ($grid / 2) $grid;

    p {
        margin: 0;
        font: $fs-s $ff;
        color: $c-alt;
        text-align: center;

        a {
            font: $fs-s $ff;
            color: $c-alt;

            & > span {
                color: $c-alt;
                }
            }
        }
    }

/* /Text */

/* /Footer */

/* /Project
---------------------------------------------------------------------------------- */
